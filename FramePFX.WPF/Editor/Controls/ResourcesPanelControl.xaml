<UserControl x:Class="FramePFX.WPF.Editor.Controls.ResourcesPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vms="clr-namespace:FramePFX.Editor.ResourceManaging.ViewModels;assembly=FramePFX"
             xmlns:rm="clr-namespace:FramePFX.Editor.ResourceManaging;assembly=FramePFX"
             xmlns:shortcuts="clr-namespace:FramePFX.WPF.Shortcuts"
             xmlns:advancedContextService="clr-namespace:FramePFX.WPF.AdvancedContextService"
             xmlns:resources="clr-namespace:FramePFX.WPF.Editor.Resources"
             xmlns:attachedProperties="clr-namespace:FramePFX.WPF.AttachedProperties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vms:ResourceManagerViewModel}">
    <Grid Margin="0" shortcuts:UIInputManager.FocusPath="Application/Editor/Resources" advancedContextService:AdvancedContextMenu.ContextGenerator="{x:Static rm:ResourceContextGenerator.Instance}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TreeView ItemsSource="{Binding Root.Items, Mode=OneTime}" DockPanel.Dock="Left" Width="175"
              BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="0,0,1,0"
              Grid.RowSpan="2"
              Grid.Column="0">
            <TreeView.Resources>
                <DataTemplate DataType="{x:Type vms:ResourceItemViewModel}">
                    <TextBlock Text="{Binding DisplayName}" />
                </DataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type vms:ResourceGroupViewModel}" ItemsSource="{Binding Items, Mode=OneTime}">
                    <TextBlock Text="{Binding DisplayName}" />
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
        <resources:ResourceListControl FileDropNotifier="{Binding .}" Background="{DynamicResource PanelBackground3}"
                                ItemsSource="{Binding CurrentGroup.Items}" BorderThickness="0"
                                attachedProperties:MultiSelectorHelper.SelectedItems="{Binding CurrentGroup.SelectedItems}"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Grid.Row="1"
                                Grid.Column="1" />
        <Border Grid.Row="0" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="-1,0,0,0" Background="{DynamicResource ABrush.Tone4.Background.Static}" BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="0,0,0,1">
            <TextBlock Text="{Binding DisplayPath, Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="4,1" />
        </Border>
    </Grid>
</UserControl>
