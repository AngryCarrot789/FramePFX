<views:WindowEx x:Class="FramePFX.WPF.Views.AppLoggerWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:views="clr-namespace:FramePFX.WPF.Views"
                xmlns:ap="clr-namespace:FramePFX.WPF.AttachedProperties"
                mc:Ignorable="d"
                Title="Application Logs" Height="450" Width="600"
                Style="{DynamicResource CustomWindowStyleEx}"
                BorderBrush="{DynamicResource PanelBorderBrush}">
    <Border BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="0,1,0,0">
        <TextBox x:Name="LoggerTextBox"
                 Background="{DynamicResource PanelBackground1}"
                 IsReadOnly="True"
                 ap:HorizontalScrolling.UseHorizontalScrolling="True"
                 BorderThickness="0"
                 FontFamily="Consolas"/>
    </Border>
</views:WindowEx>