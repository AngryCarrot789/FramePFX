<UserControl x:Class="FramePFX.Editor.Properties.Pages.PropertyPageBaseClip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FramePFX.Editor.Properties.Pages"
             xmlns:timeline="clr-namespace:FramePFX.Core.Editor.ViewModels.Timeline;assembly=FramePFX.Core"
             mc:Ignorable="d" 
             Height="32" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance timeline:ClipViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="SharedColumn0"/>
            <ColumnDefinition Width="*" SharedSizeGroup="SharedColumn1"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Display Name" Padding="4" VerticalAlignment="Center"/>
        <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" VerticalContentAlignment="Center" Padding="5,2" VerticalAlignment="Center" BorderThickness="0,0,0,1" Margin="5,2"/>
    </Grid>
</UserControl>
