<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tv="clr-namespace:FramePFX.Editors.Controls.TreeViews.Controls"
                    xmlns:t="clr-namespace:FramePFX.FileBrowser.Controls.Trees">
    <ItemsPanelTemplate x:Key="HorizontalWrapPanelItemsPanelTemplate">
        <WrapPanel Orientation="Horizontal"/>
    </ItemsPanelTemplate>

    <Style TargetType="{x:Type t:FileTreeView}" BasedOn="{StaticResource {x:Type tv:MultiSelectTreeView}}"/>

    <Style TargetType="{x:Type t:FileTreeViewItem}" BasedOn="{StaticResource {x:Type tv:MultiSelectTreeViewItem}}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="1,2"/>
    </Style>
</ResourceDictionary>