<?xml version="1.0"?>

<KeyMap Version="1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Keymap.xsd">
    <Group Name="Application">
        <Group Name="Editor">
            <Shortcut Name="NewProject" CommandId="commands.editor.NewProjectCommand">
                <KeyStroke Mods="CTRL" Key="N"/>
            </Shortcut>
            <Shortcut Name="OpenProject" CommandId="commands.editor.OpenProjectCommand">
                <KeyStroke Mods="CTRL" Key="O"/>
            </Shortcut>
            <Shortcut Name="SaveProject" CommandId="commands.editor.SaveProjectCommand">
                <KeyStroke Mods="CTRL" Key="S"/>
            </Shortcut>
            <Shortcut Name="SaveProjectAs" CommandId="commands.editor.SaveProjectAsCommand">
                <KeyStroke Mods="CTRL+SHIFT" Key="S"/>
            </Shortcut>
            <Shortcut Name="ExportShortcut" CommandId="commands.editor.ExportCommand">
                <KeyStroke Mods="CTRL" Key="E"/>
            </Shortcut>

            <!-- TODO: implement history -->
            <Shortcut Name="UndoShortcut" CommandId="commands.project.history.UndoCommand">
                <KeyStroke Mods="CTRL" Key="Z"/>
            </Shortcut>
            <Shortcut Name="RedoShortcut1" CommandId="commands.project.history.RedoCommand">
                <KeyStroke Mods="CTRL+SHIFT" Key="Z"/>
            </Shortcut>
            <Shortcut Name="RedoShortcut2" CommandId="commands.project.history.RedoCommand">
                <KeyStroke Mods="CTRL" Key="Y"/>
            </Shortcut>

            <!-- ################################## Automation helper shortcuts #################################### -->
            <Shortcut Name="ToggleTrackAutomationVisibility" CommandId="commands.timeline.ToggleTrackAutomationCommand">
                <KeyStroke Key="T"/>
            </Shortcut>
            <Shortcut Name="ToggleClipAutomation" CommandId="commands.timeline.ToggleClipAutomationCommand">
                <KeyStroke Key="C"/>
            </Shortcut>
            <!-- ################################################################################################### -->

            <!-- Shortcuts for the view port panel -->
            <Group Name="ViewPort">
                <Shortcut Name="TogglePlayPause" CommandId="commands.timeline.TogglePlayCommand">
                    <KeyStroke Key="Space"/>
                </Shortcut>
            </Group>
            <!-- Shortcuts for the property editor panel -->
            <Group Name="PropertyEditor">

            </Group>
            <!-- Shortcuts for the view port panel -->
            <Group Name="ResourceManager">
                <Shortcut Name="DeleteItems" CommandId="commands.resources.DeleteResourcesCommand" Description="Deletes all of the selected resources">
                    <KeyStroke Key="Delete"/>
                </Shortcut>
                <Shortcut Name="GroupSelection" CommandId="commands.resources.GroupResourcesCommand" Description="Groups all selected items in the explorer into a folder. Grouping items in the tree is currently unsupported">
                    <KeyStroke Mods="CTRL" Key="G"/>
                </Shortcut>
                <Shortcut Name="RenameResource1" CommandId="commands.resources.RenameResourceCommand">
                    <KeyStroke Key="F2"/>
                </Shortcut>
                <Shortcut Name="RenameResource2" CommandId="commands.resources.RenameResourceCommand">
                    <KeyStroke Mods="CTRL" Key="R"/>
                </Shortcut>
            </Group>
            <!-- Shortcuts for the timeline panel -->
            <Group Name="Timeline">
                <!-- Shortcuts for specifically the timeline sequence -->
                <Group Name="Sequence">
                    <Group Name="Track">
                        <Group Name="Clip">
                            <Shortcut Name="RenameClip1" CommandId="commands.timeline.RenameClipCommand">
                                <KeyStroke Key="F2"/>
                            </Shortcut>
                            <Shortcut Name="RenameClip2" CommandId="commands.timeline.RenameClipCommand">
                                <KeyStroke Mods="CTRL" Key="R"/>
                            </Shortcut>
                        </Group>
                        <Shortcut Name="RenameTrack1" CommandId="commands.timeline.RenameTrackCommand">
                            <KeyStroke Key="F2"/>
                        </Shortcut>
                        <Shortcut Name="RenameTrack2" CommandId="commands.timeline.RenameTrackCommand">
                            <KeyStroke Mods="CTRL" Key="R"/>
                        </Shortcut>
                    </Group>
                    <Shortcut Name="SelectAllClipsInTimeline" CommandId="commands.timeline.SelectAllClipsInTimelineCommand">
                        <KeyStroke Mods="CTRL" Key="A"/>
                    </Shortcut>
                    <Shortcut Name="SelectAllClipsInTrack" CommandId="commands.timeline.SelectAllClipsInTrackCommand">
                        <KeyStroke Mods="CTRL+SHIFT" Key="A"/>
                    </Shortcut>
                    <Shortcut Name="DeleteSelectedClips" CommandId="commands.timeline.DeleteSelectedClips" Description="Deletes all of the selected clips">
                        <KeyStroke Key="Delete"/>
                    </Shortcut>
                    <Shortcut Name="MoveBack" CommandId="commands.timeline.surface.MoveBack">
                        <KeyStroke Key="Left"/>
                    </Shortcut>
                    <Shortcut Name="MoveForward" CommandId="commands.timeline.surface.MoveForward">
                        <KeyStroke Key="Right"/>
                    </Shortcut>
                    <Shortcut Name="ExpandEndBackwards" CommandId="commands.timeline.surface.ExpandEndBackwards">
                        <KeyStroke Mods="SHIFT" Key="Left"/>
                    </Shortcut>
                    <Shortcut Name="ExpandEndForward" CommandId="commands.timeline.surface.ExpandEndForward">
                        <KeyStroke Mods="SHIFT" Key="Right"/>
                    </Shortcut>
                    <Shortcut Name="ExpandBeginBack" CommandId="commands.timeline.surface.ExpandBeginBack">
                        <KeyStroke Mods="CTRL+SHIFT" Key="Left"/>
                    </Shortcut>
                    <Shortcut Name="ExpandBeginForward" CommandId="commands.timeline.surface.ExpandBeginForward">
                        <KeyStroke Mods="CTRL+SHIFT" Key="Right"/>
                    </Shortcut>

                    <Shortcut Name="PlayHeadFrameBack" CommandId="commands.timeline.FrameBack">
                        <KeyStroke Mods="ALT" Key="Left"/>
                    </Shortcut>
                    <Shortcut Name="PlayHeadFrameForward" CommandId="commands.timeline.FrameForward">
                        <KeyStroke Mods="ALT" Key="Right"/>
                    </Shortcut>

                    <Shortcut Name="NewTextClip" CommandId="Command.create.new.clip.TextClip">
                        <KeyStroke Mods="CTRL" Key="T"/>
                    </Shortcut>
                </Group>

                <!-- Shortcuts for specifically the track control surface -->
                <Group Name="ControlSurface">
                    <Shortcut Name="SelectAllTracks" CommandId="commands.timeline.SelectAllTracksCommand">
                        <KeyStroke Mods="CTRL" Key="A"/>
                    </Shortcut>
					<Shortcut Name="DeleteSelectedTracks" CommandId="commands.timeline.DeleteSelectedTracks" Description="Deletes all of the selected tracks">
						<KeyStroke Key="Delete"/>
					</Shortcut>
                    <Shortcut Name="RenameTrack1" CommandId="commands.timeline.RenameTrackCommand">
                        <KeyStroke Key="F2"/>
                    </Shortcut>
                    <Shortcut Name="RenameTrack2" CommandId="commands.timeline.RenameTrackCommand">
                        <KeyStroke Mods="CTRL" Key="R"/>
                    </Shortcut>
                </Group>

                <Shortcut Name="NewVideoTrack" CommandId="commands.timeline.NewVideoTrack" Description="Creates a new video clip">
                    <KeyStroke Mods="CTRL+SHIFT" Key="Q"/>
                </Shortcut>

                <Shortcut Name="MoveSelectedTrackUp" CommandId="commands.timeline.MoveTrackUpCommand">
                    <KeyStroke Mods="CTRL" Key="NumPad8"/>
                </Shortcut>
                <Shortcut Name="MoveSelectedTrackDown" CommandId="commands.timeline.MoveTrackDownCommand">
                    <KeyStroke Mods="CTRL" Key="NumPad2"/>
                </Shortcut>
                <Shortcut Name="MoveSelectedTrackToTop" CommandId="commands.timeline.MoveTrackToTopCommand">
                    <KeyStroke Mods="CTRL+SHIFT" Key="NumPad8"/>
                </Shortcut>
                <Shortcut Name="MoveSelectedTrackToBottom" CommandId="commands.timeline.MoveTrackToBottomCommand">
                    <KeyStroke Mods="CTRL+SHIFT" Key="NumPad2"/>
                </Shortcut>

                <Shortcut Name="TogglePlay" CommandId="commands.timeline.TogglePlayCommand">
                    <KeyStroke Key="Space"/>
                </Shortcut>

                <Shortcut Name="SliceClips" CommandId="commands.timeline.SliceClipsCommand" Description="Cuts the selected clip in half where the play head is. If you have no selection, then all clips over the play head are sliced">
                    <KeyStroke Key="S"/>
                </Shortcut>
                <Shortcut Name="DuplicateClips" CommandId="commands.timeline.DuplicateClipsCommand">
                    <KeyStroke Mods="CTRL" Key="D"/>
                </Shortcut>
                <Shortcut Name="ToggleClipVisibility" CommandId="commands.timeline.ToggleClipVisibilityCommand">
                    <KeyStroke Key="D0"/>
                </Shortcut>

                <Shortcut Name="AddKeyFrame" CommandId="commands.automation.AddKeyFrame" Description="Adds a new key frame at the play head at the playhead for the clip's or clip's active sequence">
                    <KeyStroke Key="K"/>
                </Shortcut>
                <Shortcut Name="CreateCompositionFromSelection" CommandId="commands.timeline.CreateCompositionFromSelectionCommand">
                    <KeyStroke Mods="ALT" Key="C"/>
                </Shortcut>
                <Shortcut Name="ToggleDragScroll" CommandId="commands.editor.timeline.ToggleAutoScrollOnClipDrag">
                    <KeyStroke Mods="CTRL+SHIFT" Key="D"/>
                </Shortcut>
                <Shortcut Name="ToggleAutoPlaybackScroll" CommandId="commands.editor.timeline.ToggleAutoScrollDuringPlayback">
                    <KeyStroke Mods="CTRL+SHIFT" Key="T"/>
                </Shortcut>
            </Group>
        </Group>
    </Group>
</KeyMap>