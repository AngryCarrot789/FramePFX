<?xml version="1.0"?>

<KeyMap Version="1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Keymap.xsd">
    <Group Name="Application">
        <Group Name="Editor">
            <Shortcut Name="NewProject" ActionId="actions.editor.NewProjectAction">
                <KeyStroke Mods="CTRL" Key="N"/>
            </Shortcut>
            <Shortcut Name="OpenProject" ActionId="actions.editor.OpenProjectAction">
                <KeyStroke Mods="CTRL" Key="O"/>
            </Shortcut>
            <Shortcut Name="SaveProject" ActionId="actions.editor.SaveProjectAction">
                <KeyStroke Mods="CTRL" Key="S"/>
            </Shortcut>
            <Shortcut Name="SaveProjectAs" ActionId="actions.editor.SaveProjectAsAction">
                <KeyStroke Mods="CTRL+SHIFT" Key="S"/>
            </Shortcut>
            <Shortcut Name="ExportShortcut" ActionId="actions.editor.ExportAction">
                <KeyStroke Mods="CTRL" Key="E"/>
            </Shortcut>

            <!-- TODO: implement history -->
            <Shortcut Name="UndoShortcut" ActionId="actions.project.history.UndoAction">
                <KeyStroke Mods="CTRL" Key="Z"/>
            </Shortcut>
            <Shortcut Name="RedoShortcut1" ActionId="actions.project.history.RedoAction">
                <KeyStroke Mods="CTRL+SHIFT" Key="Z"/>
            </Shortcut>
            <Shortcut Name="RedoShortcut2" ActionId="actions.project.history.RedoAction">
                <KeyStroke Mods="CTRL" Key="Y"/>
            </Shortcut>

            <!-- ################################## Automation helper shortcuts #################################### -->
            <Shortcut Name="ToggleTrackAutomationVisibility" ActionId="actions.timeline.ToggleTrackAutomationAction">
                <KeyStroke Key="T"/>
            </Shortcut>
            <Shortcut Name="ToggleClipAutomationAction" ActionId="actions.timeline.ToggleClipAutomationAction">
                <KeyStroke Key="C"/>
            </Shortcut>
            <!-- ################################################################################################### -->

            <!-- Shortcuts for the view port panel -->
            <Group Name="ViewPort">
                <Shortcut Name="TogglePlayPause" ActionId="actions.timeline.TogglePlayAction">
                    <KeyStroke Key="Space"/>
                </Shortcut>
            </Group>
            <!-- Shortcuts for the property editor panel -->
            <Group Name="PropertyEditor">

            </Group>
            <!-- Shortcuts for the view port panel -->
            <Group Name="ResourceManager">
                <Shortcut Name="DeleteItems" ActionId="actions.resources.DeleteResourcesAction" Description="Deletes all of the selected resources">
                    <KeyStroke Key="Delete"/>
                </Shortcut>
                <Shortcut Name="GroupSelection" ActionId="actions.resources.GroupResourcesAction" Description="Groups all selected items in the explorer into a folder. Grouping items in the tree is currently unsupported">
                    <KeyStroke Mods="CTRL" Key="G"/>
                </Shortcut>
                <Shortcut Name="RenameResource1" ActionId="actions.resources.RenameResourceAction">
                    <KeyStroke Key="F2"/>
                </Shortcut>
                <Shortcut Name="RenameResource2" ActionId="actions.resources.RenameResourceAction">
                    <KeyStroke Mods="CTRL" Key="R"/>
                </Shortcut>
            </Group>
            <!-- Shortcuts for the timeline panel -->
            <Group Name="Timeline">
                <!-- Shortcuts for specifically the timeline sequence -->
                <Group Name="Sequence">
                    <Group Name="Track">
                        <Group Name="Clip">
                            <Shortcut Name="RenameClip1" ActionId="actions.timeline.RenameClipAction">
                                <KeyStroke Key="F2"/>
                            </Shortcut>
                            <Shortcut Name="RenameClip2" ActionId="actions.timeline.RenameClipAction">
                                <KeyStroke Mods="CTRL" Key="R"/>
                            </Shortcut>
                        </Group>
                        <Shortcut Name="RenameTrack1" ActionId="actions.timeline.RenameTrackAction">
                            <KeyStroke Key="F2"/>
                        </Shortcut>
                        <Shortcut Name="RenameTrack2" ActionId="actions.timeline.RenameTrackAction">
                            <KeyStroke Mods="CTRL" Key="R"/>
                        </Shortcut>
                    </Group>
                    <Shortcut Name="SelectAllClipsInTimeline" ActionId="actions.timeline.SelectAllClipsInTimelineAction">
                        <KeyStroke Mods="CTRL" Key="A"/>
                    </Shortcut>
                    <Shortcut Name="SelectAllClipsInTrack" ActionId="actions.timeline.SelectAllClipsInTrackAction">
                        <KeyStroke Mods="CTRL+SHIFT" Key="A"/>
                    </Shortcut>
                    <Shortcut Name="DeleteSelectedClips" ActionId="actions.timeline.DeleteSelectedClips" Description="Deletes all of the selected clips">
                        <KeyStroke Key="Delete"/>
                    </Shortcut>
                    <Shortcut Name="MoveBack" ActionId="actions.timeline.surface.MoveBack">
                        <KeyStroke Key="Left"/>
                    </Shortcut>
                    <Shortcut Name="MoveForward" ActionId="actions.timeline.surface.MoveForward">
                        <KeyStroke Key="Right"/>
                    </Shortcut>
                    <Shortcut Name="ExpandEndBackwards" ActionId="actions.timeline.surface.ExpandEndBackwards">
                        <KeyStroke Mods="SHIFT" Key="Left"/>
                    </Shortcut>
                    <Shortcut Name="ExpandEndForward" ActionId="actions.timeline.surface.ExpandEndForward">
                        <KeyStroke Mods="SHIFT" Key="Right"/>
                    </Shortcut>
                    <Shortcut Name="ExpandBeginBack" ActionId="actions.timeline.surface.ExpandBeginBack">
                        <KeyStroke Mods="CTRL+SHIFT" Key="Left"/>
                    </Shortcut>
                    <Shortcut Name="ExpandBeginForward" ActionId="actions.timeline.surface.ExpandBeginForward">
                        <KeyStroke Mods="CTRL+SHIFT" Key="Right"/>
                    </Shortcut>

                    <Shortcut Name="PlayHeadFrameBack" ActionId="actions.timeline.FrameBack">
                        <KeyStroke Mods="ALT" Key="Left"/>
                    </Shortcut>
                    <Shortcut Name="PlayHeadFrameForward" ActionId="actions.timeline.FrameForward">
                        <KeyStroke Mods="ALT" Key="Right"/>
                    </Shortcut>

                    <Shortcut Name="NewTextClip" ActionId="action.create.new.clip.TextClip">
                        <KeyStroke Mods="CTRL" Key="T"/>
                    </Shortcut>
                </Group>

                <!-- Shortcuts for specifically the track control surface -->
                <Group Name="ControlSurface">
                    <Shortcut Name="SelectAllTracks" ActionId="actions.timeline.SelectAllTracksAction">
                        <KeyStroke Mods="CTRL" Key="A"/>
                    </Shortcut>
					<Shortcut Name="DeleteSelectedTracks" ActionId="actions.timeline.DeleteSelectedTracks" Description="Deletes all of the selected tracks">
						<KeyStroke Key="Delete"/>
					</Shortcut>
                    <Shortcut Name="RenameTrack1" ActionId="actions.timeline.RenameTrackAction">
                        <KeyStroke Key="F2"/>
                    </Shortcut>
                    <Shortcut Name="RenameTrack2" ActionId="actions.timeline.RenameTrackAction">
                        <KeyStroke Mods="CTRL" Key="R"/>
                    </Shortcut>
                </Group>

                <Shortcut Name="NewVideoTrack" ActionId="actions.timeline.NewVideoTrack" Description="Creates a new video clip">
                    <KeyStroke Mods="CTRL+SHIFT" Key="Q"/>
                </Shortcut>

                <Shortcut Name="MoveSelectedTrackUp" ActionId="actions.timeline.MoveTrackUpAction">
                    <KeyStroke Mods="CTRL" Key="NumPad8"/>
                </Shortcut>
                <Shortcut Name="MoveSelectedTrackDown" ActionId="actions.timeline.MoveTrackDownAction">
                    <KeyStroke Mods="CTRL" Key="NumPad2"/>
                </Shortcut>
                <Shortcut Name="MoveSelectedTrackToTop" ActionId="actions.timeline.MoveTrackToTopAction">
                    <KeyStroke Mods="CTRL+SHIFT" Key="NumPad8"/>
                </Shortcut>
                <Shortcut Name="MoveSelectedTrackToBottom" ActionId="actions.timeline.MoveTrackToBottomAction">
                    <KeyStroke Mods="CTRL+SHIFT" Key="NumPad2"/>
                </Shortcut>

                <Shortcut Name="TogglePlay" ActionId="actions.timeline.TogglePlayAction">
                    <KeyStroke Key="Space"/>
                </Shortcut>

                <Shortcut Name="SliceClips" ActionId="actions.timeline.SliceClipsAction" Description="Cuts the selected clip in half where the play head is. If you have no selection, then all clips over the play head are sliced">
                    <KeyStroke Key="S"/>
                </Shortcut>
                <Shortcut Name="DuplicateClips" ActionId="actions.timeline.DuplicateClipsAction">
                    <KeyStroke Mods="CTRL" Key="D"/>
                </Shortcut>
                <Shortcut Name="ToggleClipVisibility" ActionId="actions.timeline.ToggleClipVisibilityAction">
                    <KeyStroke Key="D0"/>
                </Shortcut>

                <Shortcut Name="AddKeyFrame" ActionId="actions.automation.AddKeyFrame" Description="Adds a new key frame at the play head at the playhead for the clip's or clip's active sequence">
                    <KeyStroke Key="K"/>
                </Shortcut>
                <Shortcut Name="CreateCompositionFromSelection" ActionId="actions.timeline.ConvertSelectionIntoCompositionAction">
                    <KeyStroke Mods="ALT" Key="C"/>
                </Shortcut>
                <Shortcut Name="ToggleDragScroll" ActionId="actions.editor.timeline.ToggleAutoScrollOnClipDrag">
                    <KeyStroke Mods="CTRL+SHIFT" Key="D"/>
                </Shortcut>
                <Shortcut Name="ToggleAutoPlaybackScroll" ActionId="actions.editor.timeline.ToggleAutoScrollDuringPlayback">
                    <KeyStroke Mods="CTRL+SHIFT" Key="T"/>
                </Shortcut>
            </Group>
        </Group>
    </Group>
</KeyMap>