<v:WindowEx x:Class="FramePFX.Tasks.ActivityDialog"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:v="clr-namespace:FramePFX.Views"
            mc:Ignorable="d"
            Title="ActivityDialog"
            MinWidth="350" MinHeight="90"
            Height="100" Width="400"
            Style="{StaticResource CustomWindowStyleEx}"
            WindowStyle="ToolWindow">
    <StackPanel Margin="8">
        <TextBlock x:Name="PART_Message" Text="Message" Padding="5,2,5,8"/>
        <ProgressBar x:Name="PART_ProgressBar" Height="20"
                     BorderBrush="{DynamicResource ABrush.Tone1.Border.Static}"
                     Minimum="0" Maximum="1" Value="0"/>
    </StackPanel>
</v:WindowEx>