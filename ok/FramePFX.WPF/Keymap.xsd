    <xs:simpleType name="ModifierKeyType" final="restriction">
        <xs:restriction base="xs:string">
            <xs:pattern value="(CTRL|SHIFT|ALT|WIN)(\+(CTRL|SHIFT|ALT|WIN))*" />
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="MouseButtonType" final="restriction">
        <xs:restriction base="xs:string">
            <xs:enumeration value="Left" />
            <xs:enumeration value="Middle" />
            <xs:enumeration value="Right" />
            <xs:enumeration value="X1" />
            <xs:enumeration value="X2" />
            <xs:enumeration value="WheelUp" />
            <xs:enumeration value="WheelDown" />
            <xs:pattern value="[0-9]*" />
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="RepeatModeType" final="restriction">
        <xs:restriction base="xs:string">
            <xs:enumeration value="Ignored" />
            <xs:enumeration value="NonRepeat" />
            <xs:enumeration value="RepeatOnly" />
        </xs:restriction>
    </xs:simpleType>
    <xs:element name="KeyMap" type="KeyMapType" />
    <xs:complexType name="KeyStrokeType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:int" name="KeyCode" />
                <xs:attribute type="xs:boolean" name="IsRelease" />
                <xs:attribute type="ModifierKeyType" name="Mods" />
                <xs:attribute type="KeyType" name="Key" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="MouseStrokeType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="ModifierKeyType" name="Mods" />
                <xs:attribute type="MouseButtonType" name="Button" />
                <xs:attribute type="xs:int" name="ClickCount" />
                <xs:attribute type="xs:int" name="WheelDelta" />
                <xs:attribute type="xs:int" name="CustomParam" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="ShortcutType">
        <xs:choice>
            <xs:element type="Shortcut.ContextType" name="Shortcut.Context" minOccurs="0" />
            <xs:element type="KeyStrokeType" name="KeyStroke" minOccurs="0" />
            <xs:element type="MouseStrokeType" name="MouseStroke" minOccurs="0" />
        </xs:choice>
        <xs:attribute type="xs:string" name="Name" />
        <xs:attribute type="xs:string" name="ActionId" />
        <xs:attribute type="xs:boolean" name="Global" />
        <xs:attribute type="xs:boolean" name="Inherit" />
        <xs:attribute type="xs:string" name="Description" />
        <xs:attribute type="xs:string" name="DisplayName" />
        <xs:attribute type="RepeatModeType" name="RepeatMode" />
    </xs:complexType>
    <xs:complexType name="GroupType">
        <xs:choice maxOccurs="unbounded" minOccurs="0">
            <xs:element type="GroupType" name="Group" maxOccurs="unbounded" minOccurs="0" />
            <xs:element type="ShortcutType" name="Shortcut" maxOccurs="unbounded" minOccurs="0" />
        </xs:choice>
        <xs:attribute type="xs:string" name="Name" />
        <xs:attribute type="xs:boolean" name="Global" />
        <xs:attribute type="xs:boolean" name="Inherit" />
        <xs:attribute type="xs:string" name="Description" />
        <xs:attribute type="xs:string" name="DisplayName" />
    </xs:complexType>
    <xs:complexType name="Shortcut.ContextType">
        <xs:choice>
            <xs:element type="FlagType" name="Flag" />
            <xs:element type="FlagsType" name="Flags" />
            <xs:element type="EntryType" name="Entry" />
            <xs:element type="FloatEntryType" name="FloatEntry" />
            <xs:element type="IntEntryType" name="IntEntry" />
        </xs:choice>
    </xs:complexType>
    <xs:complexType name="FlagType">
        <xs:simpleContent>
            <xs:extension base="xs:boolean">
                <xs:attribute type="xs:string" name="Key" />
                <xs:attribute type="xs:boolean" name="Value" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="FlagsType">
        <xs:simpleContent>
            <xs:extension base="xs:string" />
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="EntryType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="Key" />
                <xs:attribute type="xs:string" name="Value" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="FloatEntryType">
        <xs:simpleContent>
            <xs:extension base="xs:double">
                <xs:attribute type="xs:string" name="Key" />
                <xs:attribute type="xs:double" name="Value" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="IntEntryType">
        <xs:simpleContent>
            <xs:extension base="xs:long">
                <xs:attribute type="xs:string" name="Key" />
                <xs:attribute type="xs:long" name="Value" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="KeyMapType">
        <xs:choice>
            <xs:element type="GroupType" name="Group" maxOccurs="unbounded" minOccurs="0" />
            <xs:element type="ShortcutType" name="Shortcut" maxOccurs="unbounded" minOccurs="0" />
        </xs:choice>
    </xs:complexType>
</xs:schema>